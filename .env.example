# SmartRelief Environment Configuration
# Copy this file to .env and update with your values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
NODE_ENV=development
PORT=3000
APP_NAME=SmartRelief
APP_VERSION=1.0.0
APP_URL=http://localhost:3000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL Database
DATABASE_URL=postgresql://smartrelief:password@localhost:5432/smartrelief_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=smartrelief_dev
DATABASE_USER=smartrelief
DATABASE_PASSWORD=password
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Test Database (used by backend Jest setup)
TEST_DATABASE_URL=postgresql://smartrelief:password@localhost:5432/smartrelief_test

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ===========================================
# JWT & AUTHENTICATION
# ===========================================
JWT_SECRET=eb64f373d7f2560241ef88865bc02fa1663c8f954e6c0ca10ec6239a98259168
JWT_EXPIRES_IN=86400
JWT_REFRESH_EXPIRE=7d
BCRYPT_ROUNDS=12

# ===========================================
# API KEYS & EXTERNAL SERVICES
# ===========================================
# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=smartrelief-assets
AWS_CLOUDFRONT_URL=https://your-cloudfront-domain.cloudfront.net

# Mapping Services
MAPBOX_ACCESS_TOKEN=your-mapbox-token
GOOGLE_MAPS_API_KEY=your-google-maps-key

# Communication Services
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@smartrelief.org

# Push Notifications
EXPO_ACCESS_TOKEN=your-expo-access-token
FCM_SERVER_KEY=your-fcm-server-key

# Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# ===========================================
# AI/ML SERVICE CONFIGURATION
# ===========================================
AI_BASE_URL=http://localhost:8000/api/v1
AI_SERVICE_API_KEY=your-ai-service-api-key
OPENAI_API_KEY=your-openai-api-key

# Computer Vision
CV_MODEL_PATH=./ml_models/damage_classifier/model.pkl
YOLO_MODEL_PATH=./ml_models/yolo/best.pt

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your-app-insights-key

# Log Level (error, warn, info, debug)
LOG_LEVEL=info
LOG_FORMAT=json

# ===========================================
# SECURITY SETTINGS
# ===========================================
# CORS Settings
CORS_ORIGIN=http://localhost:3000,http://localhost:19006
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Hot Reload
CHOKIDAR_USEPOLLING=true

# Debug Mode
DEBUG=smartrelief:*
VERBOSE_LOGGING=true

# Test Configuration
TEST_TIMEOUT=30000
COVERAGE_THRESHOLD=80

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================
# Uncomment and modify for production deployment

# SSL Configuration
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/private-key.pem

# Production Database
# DATABASE_URL=postgresql://username:password@prod-db-host:5432/smartrelief_prod
# DATABASE_SSL=true
# DATABASE_POOL_MAX=20

# Production Redis
# REDIS_URL=redis://prod-redis-host:6379
# REDIS_PASSWORD=prod-redis-password

# Production Security
# JWT_SECRET=production-super-secret-key-256-bits-minimum
# BCRYPT_ROUNDS=15

# Production Monitoring
# SENTRY_ENVIRONMENT=production
# LOG_LEVEL=warn

# CDN Configuration
# STATIC_ASSETS_URL=https://cdn.smartrelief.org

# ===========================================
# MOBILE APP CONFIGURATION
# ===========================================
# Expo Configuration
EXPO_PROJECT_ID=your-expo-project-id
EAS_PROJECT_ID=your-eas-project-id

# API Endpoints
API_BASE_URL=http://localhost:3000/api
AI_API_BASE_URL=http://localhost:8000/ai
WEBSOCKET_URL=ws://localhost:3000

# Feature Flags
ENABLE_BIOMETRIC_AUTH=true
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=true

# ===========================================
# DOCKER CONFIGURATION
# ===========================================
# Docker Compose Settings
COMPOSE_PROJECT_NAME=smartrelief
POSTGRES_DB=smartrelief_dev
POSTGRES_USER=smartrelief
POSTGRES_PASSWORD=password

# ===========================================
# KUBERNETES CONFIGURATION
# ===========================================
# Kubernetes Namespace
K8S_NAMESPACE=smartrelief-dev

# Ingress Configuration
INGRESS_HOST=dev.smartrelief.org
TLS_SECRET_NAME=smartrelief-tls

# ===========================================
# CI/CD CONFIGURATION
# ===========================================
# GitHub Actions
GITHUB_TOKEN=your-github-token

# Docker Registry
DOCKER_REGISTRY=ghcr.io/smartrelief
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password
