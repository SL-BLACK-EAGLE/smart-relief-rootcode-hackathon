{
  "name": "smartrelief",
  "version": "1.0.0",
  "description": "Decentralized Disaster Relief & Aid Coordination Platform",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:ai\" \"npm run dev:mobile\"",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "dev:ai": "npm run dev --workspace=packages/ai-service",
    "dev:mobile": "npm run dev --workspace=packages/mobile",
    "dev:shared": "npm run dev --workspace=packages/shared",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=packages/backend",
    "build:ai": "npm run build --workspace=packages/ai-service",
    "build:mobile": "npm run build --workspace=packages/mobile",
    "test": "npm run test --workspaces",
    "test:unit": "npm run test:unit --workspaces",
    "test:integration": "npm run test:integration --workspaces",
    "test:e2e": "npm run test:e2e --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "prepare": "husky install",
    "docker:dev": "docker-compose up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "setup": "./scripts/setup.sh",
    "start:dev": "./scripts/start-dev.sh",
    "build:all": "./scripts/build-all.sh",
    "deploy": "./scripts/deploy.sh",
    "db:migrate": "npm run db:migrate --workspace=packages/backend",
    "db:seed": "npm run db:seed --workspace=packages/backend",
    "db:reset": "npm run db:reset --workspace=packages/backend",
    "ai:train": "npm run train --workspace=packages/ai-service",
    "docs:generate": "typedoc --options typedoc.json",
    "security:audit": "npm audit --audit-level moderate",
    "performance:test": "npm run performance:test --workspace=packages/backend"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "disaster-relief",
    "humanitarian-aid",
    "react-native",
    "nodejs",
    "ai",
    "geospatial",
    "emergency-response"
  ],
  "author": "SmartRelief Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/smartrelief/platform.git"
  },
  "bugs": {
    "url": "https://github.com/smartrelief/platform/issues"
  },
  "homepage": "https://github.com/smartrelief/platform#readme",
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  }
}
